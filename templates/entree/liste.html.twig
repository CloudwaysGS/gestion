{% extends 'accueil.html.twig' %}

{% block title %}Gestion des entrees{% endblock %}

{% block body %}
    <style>

        .glow-on-hover {
            width: 130px;
            height: 35px;
            border: none;
            outline: none;
            color: #fff;
            background: #111;
            cursor: pointer;
            position: relative;
            z-index: 0;
            border-radius: 10px;
        }

        .glow-on-hover:before {
            content: '';
            background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
            position: absolute;
            top: -2px;
            left:-2px;
            background-size: 400%;
            z-index: -1;
            filter: blur(5px);
            width: calc(100% + 4px);
            height: calc(100% + 4px);
            animation: glowing 20s linear infinite;
            opacity: 0;
            transition: opacity .3s ease-in-out;
            border-radius: 10px;
        }

        .glow-on-hover:active {
            color: #000
        }

        .glow-on-hover:active:after {
            background: transparent;
        }

        .glow-on-hover:hover:before {
            opacity: 1;
        }

        .glow-on-hover:after {
            z-index: -1;
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: #4e73df;
            left: 0;
            top: 0;
            border-radius: 10px;
        }

        @keyframes glowing {
            0% { background-position: 0 0; }
            50% { background-position: 400% 0; }
            100% { background-position: 0 0; }
        }
    </style>
    {% for message in app.session.flashBag.get('success') %}
        <div id="flash-message" class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.session.flashBag.get('danger') %}
        <div id="flash-message" class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    <div class="row">
        <div class="container col-md-8">
            <div class="card ">
                <div class="card-header">Liste des achats</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Fournisseur</th>
                                <th>Produit</th>
                                <th>Quantite acheté</th>
                                <th>PrixUnit</th>
                                <th>Montant</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                            {% for e in entree %}
                                <tr>
                                    <th>{{ e.fournisseur }}</th>
                                    <th>{% if e.produit is not null %}
                                            {{ e.produit }}
                                        {% elseif e.detail is not null %}
                                            {{ e.detail }}
                                        {% else %}
                                            {{ e.produit }}
                                        {% endif %}</th>
                                    <th>{{ e.qtEntree }}</th>
                                    <th>{{ e.prixUnit | number_format(0, ',', ' ') }}</th>
                                    <th>{{ e.total | number_format(0, ',', ' ') }}</th>
                                    <th>{{ e.dateEntree|date('d/m/Y') }}</th>
                                    <td>
                                        <a href="{{ path('entrer_modifier', {'id': e.id}) }}" ><i class="fa fa-edit"></i></a>
                                        <a href="{{ path('entrer_delete', {'id': e.id}) }}" ><i style="color: red" class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            {% if total > limit %}
                                {% set pages = (total / limit)|round(0, 'ceil') %}
                                {% for i in 1..pages %}
                                    {% if i == page %}
                                        <li class="page-item active" aria-current="page">
                                            <span class="page-link">{{ i }} <span class="sr-only">(current)</span></span>
                                        </li>
                                    {% else %}
                                        <li class="page-item"><a class="page-link" href="{{ path('entree_liste', {'page': i}) }}">{{ i }}</a></li>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="container col-md-4">
            <div class="card">
                <div class="card-header">Formulaire de gestion des produits</div>
                <div class="card-body">
                    <form method="post" action="{{ path('entree_add') }}">
                        <select class="form-control mb-1" name="fournisseur_id" id="fournisseur_id">
                            <option value="" selected disabled>Choisissez un fournisseur</option>
                            {% for f in fournisseur %}
                                <option value="{{ f.id }}">{{ f.nom }}</option>
                            {% endfor %}
                        </select>

                        <select class="form-control mb-1" name="produit_id" id="produit_id">
                            <option value="" selected disabled>Choisissez un produit</option>
                            {% for p in produits %}
                                <option value="{{ p.id }}">{{ p.libelle }}</option>
                            {% endfor %}
                        </select>
                        <div>

                        </div>
                        <input class="form-control" type="text" id="qt_sortie" name="qt_sortie" placeholder="quantité" required>

                        <input class="form-control mt-1" type="text" id="prix_unit" name="prix_unit" placeholder="prix unitaire" required>

                        <button class="form-control mt-1" type="submit">Enregistrer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        setTimeout(function() {
            var flashMessage = document.getElementById('flash-message');
            if (flashMessage !== null) {
                flashMessage.remove();
            }
        }, 10000);
    </script>

{% endblock %}