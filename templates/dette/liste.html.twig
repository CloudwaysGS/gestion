{% extends 'accueil.html.twig' %}

{% block title %}Dette{% endblock %}

{% block body %}
    {% for message in app.session.flashBag.get('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.session.flashBag.get('danger') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    <a href="{{ path('paiement_add') }}" class="btn btn-primary m-2">remboursement</a>
    <div class="row">
        <div class="container col-md-9">
            <div class="card ">
                <div class="card-header">Liste des detes</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Nom client</th>
                                <th>Montant dette</th>
                                <th>Reste</th>
                                <th>Date</th>
                                <th>statut</th>
                                <th>action</th>
                            </tr>
                            {% for d in dette %}
                                <tr>
                                    <th>{{ d.client }}</th>
                                    <th>{{ d.montantDette | number_format(0, ',', ' ') }}</th>
                                    <th>{{ d.reste | number_format(0, ',', ' ') }}</th>
                                    <th>{{ d.dateCreated | date('d/m/Y') }}</th>
                                    <th style="color: {% if d.statut == 'payÃ©e' %}#1cc88a{% else %}red{% endif %}">{{ d.statut }}</th>
                                    <th>
                                        <a title="Avance" href="{{ path('dette_add', {'id':d.id}) }}"><i class='far fa-address-card'></i></a>
                                        <a title="detail"  class="open-modal"><i class="fa fa-edit"></i></a>
                                        <a title="supprimer" href="{{ path('dette_delete', {'id':d.id}) }}"><i style="color: red" class="fa fa-trash" aria-hidden="true"></i></a>
                                    </th>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            {% if total > limit %}
                                {% set pages = (total / limit)|round(0, 'ceil') %}
                                {% for i in 1..pages %}
                                    {% if i == page %}
                                        <li class="page-item active" aria-current="page">
                                            <span class="page-link">{{ i }} <span class="sr-only">(current)</span></span>
                                        </li>
                                    {% else %}
                                        <li class="page-item"><a class="page-link" href="{{ path('dette_liste', {'page': i}) }}">{{ i }}</a></li>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="container col-md-3">
            <div class="card">
                <div class="card-header">Formulaire de gestion des dettes</div>
                <div class="card-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Contenu du modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Titre du modal</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>Nom client</th>
                            <th>Montant dette</th>
                            <th>Montant avance</th>
                            <th>Date</th>

                        </tr>
                        {% for d in dette %}
                            <tr>
                                <th>{{ d.client }}</th>
                                <th>{{ d.montantDette | number_format(0, ',', ' ') }}</th>
                                <th>{{ d.montantAvance | number_format(0, ',', ' ') }}</th>
                                <th>{{ d.dateCreated | date('d/m/Y') }}</th>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.open-modal').click(function() {
                $('#exampleModal').modal('show');
            });
        });
    </script>

{% endblock %}
