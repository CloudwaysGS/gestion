{% extends 'accueil.html.twig' %}

{% block title %}Dette{% endblock %}

{% block body %}
    {% for message in app.session.flashBag.get('success') %}
        <div id="flash-message" class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.session.flashBag.get('danger') %}
        <div id="flash-message" class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    <style>

        .glow-on-hover {
            width: 130px;
            height: 35px;
            border: none;
            outline: none;
            color: #fff;
            background: #111;
            cursor: pointer;
            position: relative;
            z-index: 0;
            border-radius: 10px;
        }

        .glow-on-hover:before {
            content: '';
            background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
            position: absolute;
            top: -2px;
            left:-2px;
            background-size: 400%;
            z-index: -1;
            filter: blur(5px);
            width: calc(100% + 4px);
            height: calc(100% + 4px);
            animation: glowing 20s linear infinite;
            opacity: 0;
            transition: opacity .3s ease-in-out;
            border-radius: 10px;
        }

        .glow-on-hover:active {
            color: #000
        }

        .glow-on-hover:active:after {
            background: transparent;
        }

        .glow-on-hover:hover:before {
            opacity: 1;
        }

        .glow-on-hover:after {
            z-index: -1;
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: #4e73df;
            left: 0;
            top: 0;
            border-radius: 10px;
        }

        @keyframes glowing {
            0% { background-position: 0 0; }
            50% { background-position: 400% 0; }
            100% { background-position: 0 0; }
        }
    </style>
    <button class="glow-on-hover ml-3 m-1">
        <a onclick="window.location.href='{{ path('paiement_add') }}'">remboursement</a>
    </button>
    <button class="glow-on-hover">
        <a onclick="window.location.href='{{ path('client_add') }}'">Nouveau client</a>
    </button>
    <div class="row">
        <div class="container col-md-9">
            <div class="card ">
                <div class="card-header">
                    <a href="#">Liste des dettes clients</a>
                    <a class="m-4" href="{{ path('dette_founisseur_liste') }}">Liste des dettes fournisseurs</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered text-center">
                            <tr>
                                <th>Nom client</th>
                                <th>Montant dette</th>
                                {% if dette %}
                                    <th>{{ dette[0].reste < 0 ? 'A Remettre' : 'Reste' }}</th>
                                {% endif %}
                                <th>comment</th>
                                <th>statut</th>
                                <th>Date</th>
                                <th>action</th>
                            </tr>
                            {% for d in dette %}
                                <tr>
                                    <th>{{ d.client }}</th>
                                    <th>{{ d.montantDette | number_format(0, ',', ' ') }}</th>
                                    {% if is_numeric(d.reste) %}
                                        <th style="color: {{ d.reste < 0 ? 'red' : 'inherit' }}">
                                            {{ d.reste < 0 ? -d.reste : d.reste | number_format(0, ',', ' ') }}
                                        </th>
                                    {% else %}
                                        <th>{{ d.reste }}</th>
                                    {% endif %}
                                    <th>{{ d.commentaire }}</th>
                                    <th style="color: {% if d.statut == 'payée' %}#1cc88a{% else %}red{% endif %}">{{ d.statut }}</th>
                                    <th>{{ d.dateCreated | date('d/m/Y') }}</th>
                                    <th>
                                        <a title="Avance" href="{{ path('dette_info', {'id':d.id}) }}"><i class='far fa-address-card'></i></a>
                                        <a title="supprimer" href="{{ path('dette_delete', {'id':d.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette dette ?');"><i style="color: red" class="fa fa-trash" aria-hidden="true"></i></a>
                                    </th>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            {% if total > limit %}
                                {% set pages = (total / limit)|round(0, 'ceil') %}
                                {% for i in 1..pages %}
                                    {% if i == page %}
                                        <li class="page-item active" aria-current="page">
                                            <span class="page-link">{{ i }} <span class="sr-only">(current)</span></span>
                                        </li>
                                    {% else %}
                                        <li class="page-item"><a class="page-link" href="{{ path('dette_liste', {'page': i}) }}">{{ i }}</a></li>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="container col-md-3">
            <div class="card">
                <div class="card-header">Formulaire de gestion des dettes</div>
                <div class="card-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Contenu du modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Titre du modal</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    MODAL
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.open-modal').click(function() {
                $('#exampleModal').modal('show');
            });
        });
    </script>
    <script>
        setTimeout(function() {
            var flashMessage = document.getElementById('flash-message');
            if (flashMessage !== null) {
                flashMessage.remove();
            }
        }, 10000);
    </script>
{% endblock %}
