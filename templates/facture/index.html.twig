{% extends 'accueil.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <style>

        .glow-on-hover {
            width: 130px;
            height: 35px;
            border: none;
            outline: none;
            color: #fff;
            background: #111;
            cursor: pointer;
            position: relative;
            z-index: 0;
            border-radius: 10px;
        }

        .glow-on-hover:before {
            content: '';
            background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
            position: absolute;
            top: -2px;
            left:-2px;
            background-size: 400%;
            z-index: -1;
            filter: blur(5px);
            width: calc(100% + 4px);
            height: calc(100% + 4px);
            animation: glowing 20s linear infinite;
            opacity: 0;
            transition: opacity .3s ease-in-out;
            border-radius: 10px;
        }

        .glow-on-hover:active {
            color: #000
        }

        .glow-on-hover:active:after {
            background: transparent;
        }

        .glow-on-hover:hover:before {
            opacity: 1;
        }

        .glow-on-hover:after {
            z-index: -1;
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            background: #4e73df;
            left: 0;
            top: 0;
            border-radius: 10px;
        }

        @keyframes glowing {
            0% { background-position: 0 0; }
            50% { background-position: 400% 0; }
            100% { background-position: 0 0; }
        }
    </style>
    <div class="row">
        <div class="container col-md-4">
            <div class="card">
                <div class="card-body">
                    {{ form(form, {'attr': { 'id': 'form'}}) }}
                </div>
            </div>
        </div>
        <div class="container col-md-8">
            {% for message in app.session.flashBag.get('success') %}
                <div id="flash-message" class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.session.flashBag.get('danger') %}
                <div id="flash-message" class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            <button class="glow-on-hover mb-1" onclick="window.location.href='{{ path('facture_delete_all') }}'">Enregistrer</button>
            <button class="glow-on-hover" onclick="window.location.href='{{ path('liste_chargement') }}'">Mes factures</button>
            <button class="glow-on-hover" onclick="window.location.href='{{ path('client_add') }}'">Créer client</button>
            {% if is_granted("ROLE_GESTION_STOCK") %}
            <button class="glow-on-hover" onclick="window.location.href='{{ path('produit_liste') }}'">Ajouter Produit</button>
            {% endif %}
            <button class="glow-on-hover" onclick="window.location.href='{{ path('facture2_liste') }}'">Facture 2</button>

            {% for message in app.session.flashBag.get('danger') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <div class="card ">
                <div class="card-header">Facture</div>
                <div class="card-body">
                    <div class="table-responsive" >
                        <table id="facture_liste" class="table table-striped table-hover">
                            <tr>
                                <th>Quantite</th>
                                <th>Produit</th>
                                <th>PrixUnit</th>
                                <th>Montant</th>
                                <th>Action</th>
                            </tr>
                            {% set total = 0 %}
                            {% for f in facture %}
                                <tr>
                                    <td>{{ f.quantite }}</td>
                                    <td>
                                        {% if f.nomProduit > 0 %}
                                            {{ f.nomProduit }}
                                        {% endif %}
                                    </td>

                                    <td>
                                        {% if f.prixUnit > 0 %}
                                            {{ f.prixUnit|number_format(0, ',', ' ') }}
                                        {% endif %}
                                    </td>
                                    <td>{{ f.montant | number_format(0, ',', ' ') }}</td>
                                    <td>
                                        <a title="Modifier" href="{{ path('modifier',{'id':f.id}) }}"><i class="fa fa-edit"></i></a>
                                        <a title="supprimer" href="{{ path('facture_delete', {'id':f.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');"><i style="color: red" class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                                {% set total = total + f.montant %}
                            {% endfor %}
                            <td>Total</td>
                            <td></td>
                            <td></td>
                            <td>{{ total|number_format(0, ',', ' ') }} f </td>
                            <td></td>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}

{% block javascripts %}

    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        setTimeout(function() {
            var flashMessage = document.getElementById('flash-message');
            if (flashMessage !== null) {
                flashMessage.remove();
            }
        }, 10000);
    </script>

{% endblock %}