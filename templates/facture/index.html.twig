{% extends 'accueil.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <div class="row">
        <div class="container col-md-4">
            <div class="card">
                <div class="card-body">
                    {{ form(form, {'attr': { 'id': 'form'}}) }}
                </div>
            </div>
        </div>
        <div class="container col-md-8">
            {% for message in app.session.flashBag.get('success') %}
                <div id="flash-message" class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.session.flashBag.get('danger') %}
                <div id="flash-message" class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            <a href="{{ path('facture_delete_all') }}" class="btn btn-primary" onclick="onEnregistrerClicked()">Enrégistrer</a>
            <a href="{{ path('liste_chargement') }}" class="btn btn-primary">Mes factures</a>
            <a href="{{ path('client_add') }}" class="btn btn-primary">Nouveau client</a>
            <a href="{{ path('facture_export') }}" class="btn btn-primary" onclick="onExportClicked()">Exporter en pdf</a>
            {% for message in app.session.flashBag.get('danger') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <div class="card ">
                <div class="card-header">Facture</div>
                <div class="card-body">
                    <div class="table-responsive" >
                        <table id="facture_liste" class="table table-striped table-hover">
                            <tr>
                                <th>Quantite acheté</th>
                                <th>Produit</th>
                                <th>PrixUnit</th>
                                <th>Montant</th>
                                <th>Action</th>
                            </tr>
                            {% set total = 0 %}
                            {% for f in facture %}
                                <tr>
                                    <td>{{ f.quantite }}</td>
                                    <td>{% if f.produit.count() > 0 %}
                                            {{ f.produit[0].libelle }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if f.produit.count() > 0 %}
                                            {{ f.prixUnit|number_format(0, ',', ' ') }}
                                        {% endif %}
                                    </td>
                                    <td>{{ f.montant | number_format(0, ',', ' ') }}</td>
                                    <td>
                                        <a title="Modifier" href="{{ path('modifier',{'id':f.id}) }}"><i class="fa fa-edit"></i></a>
                                        <a title="supprimer" href="{{ path('facture_delete', {'id':f.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');"><i style="color: red" class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                                {% set total = total + f.montant %}
                            {% endfor %}
                            <td>Total</td>
                            <td></td>
                            <td></td>
                            <td>{{ total|number_format(0, ',', ' ') }} f </td>
                            <td></td>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}

    <script>
        var form = $('#form');
        form.on('submit', function(event) {
            event.preventDefault();
            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: form.serialize(),
                success: function(response) {
                    if (response.status === 'error') {
                        alert(response.message);
                    } else {
                        var updatedTable = $(response).find('#facture_liste');
                        $('#facture_liste').html(updatedTable.html());
                        form[0].reset();
                    }
                },
                error: function(xhr, status, error) {
                    alert('Une erreur est survenue : ' + error);
                }
            });
        });
    </script>
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        setTimeout(function() {
            var flashMessage = document.getElementById('flash-message');
            if (flashMessage !== null) {
                flashMessage.remove();
            }
        }, 10000);
    </script>

    <script>
        let enregistrerClicked = false;
        const enregistrerButton = document.querySelector('a[href="{{ path('facture_delete_all') }}"]');
        const exportButton = document.querySelector('a[href="{{ path('facture_export') }}"]');

        enregistrerButton.addEventListener('click', () => {
            if (enregistrerClicked) {
                // Execute the deleteAll function
                window.location.href = enregistrerButton.getAttribute('href');
            } else {
                // Prevent the execution of the deleteAll function
                event.preventDefault();
                alert('Veuillez d\'abord cliquer sur "Exporter en pdf".');
            }
        });

        exportButton.addEventListener('click', () => {
            enregistrerClicked = true;
        });
    </script>


{% endblock %}