{% extends 'accueil.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <div class="row">
        <div class="container col-md-4">
            <div class="card">
                <div class="card-body">
                    {{ form(form, {'attr': { 'id': 'form'}}) }}
                </div>
            </div>
        </div>
        <div class="container col-md-8">
            {% for message in app.session.flashBag.get('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.session.flashBag.get('danger') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <a href="{{ path('facture_delete_all') }}" class="btn btn-primary">Enrégistrer</a>
            <a href="{{ path('liste_chargement') }}" class="btn btn-primary">Mes factures</a>
            <a href="{{ path('facture_export') }}" class="btn btn-primary">Exporter en pdf</a>
            {% for message in app.session.flashBag.get('danger') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <div class="card ">
                <div class="card-header">Facture</div>
                <div class="card-body">
                    <div class="table-responsive" >
                        <table id="facture_liste" class="table table-striped table-hover">
                            <tr>
                                <th>Quantite acheté</th>
                                <th>Produit</th>
                                <th>PrixUnit</th>
                                <th>Montant</th>
                                <th>Action</th>
                            </tr>
                            {% set total = 0 %}
                            {% for f in facture %}
                                <tr>
                                    <td>{{ f.quantite }}</td>
                                    <td>{% if f.produit.count() > 0 %}
                                            {{ f.produit[0].libelle }}
                                        {% endif %}
                                    </td>
                                    <td onclick="editField(event)">
                                        {% if f.produit.count() > 0 %}
                                            {{ f.produit[0].prixUnit|number_format(0, ',', ' ') }}
                                        {% endif %}
                                    </td>
                                    <td onclick="editField(event)">{{ f.montant | number_format(0, ',', ' ') }}</td>
                                    <td>
                                        <a title="supprimer" href="{{ path('facture_delete', {'id':f.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');"><i style="color: red" class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                                {% set total = total + f.montant %}
                            {% endfor %}
                            <td>Total</td>
                            <td></td>
                            <td></td>
                            <td>{{ total|number_format(0, ',', ' ') }} f </td>
                            <td></td>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        var form = $('#form');
        form.on('submit', function(event) {
            event.preventDefault();
            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: form.serialize(),
                success: function(response) {
                    if (response.status === 'error') {
                        alert(response.message);
                    } else {
                        var updatedTable = $(response).find('#facture_liste');
                        $('#facture_liste').html(updatedTable.html());
                        form[0].reset();
                    }
                },
                error: function(xhr, status, error) {
                    alert('Une erreur est survenue : ' + error);
                }
            });
        });
    </script>

    <script>
        function editField(event, field, id) {
            const td = event.target;
            const value = td.innerText.trim();
            td.innerHTML = `<input type="text" value="${value}" onblur="updateField(event, '${field}', ${id})" />`;
        }

        function updateField(event, field, id) {
            const input = event.target;
            const td = input.parentNode;
            const value = input.value.trim();
            td.innerHTML = value;
            if (field === 'quantite') {
                updateMontant(id);
            } else if (field === 'prixUnit') {
                updateMontant(id);
                updateTotal();
            }
        }

        function updateMontant(id) {
            const quantite = parseInt(document.querySelector(`#facture_liste tr:nth-child(${id+1}) td:nth-child(1)`).innerText);
            const prixUnit = parseInt(document.querySelector(`#facture_liste tr:nth-child(${id+1}) td:nth-child(3)`).innerText.replace(/\s/g, ''));
            const montant = quantite * prixUnit;
            document.querySelector(`#facture_liste tr:nth-child(${id+1}) td:nth-child(4)`).innerText = montant.toLocaleString('fr-FR');
        }

        function updateTotal() {
            const montants = document.querySelectorAll('#facture_liste td:nth-child(4)');
            let total = 0;
            for (let i = 0; i < montants.length; i++) {
                total += parseInt(montants[i].innerText.replace(/\s/g, ''));
            }
            document.querySelector('#total').innerText = total.toLocaleString('fr-FR');
        }

    </script>


{% endblock %}