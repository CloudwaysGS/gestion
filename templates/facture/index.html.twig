{% extends 'accueil.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <div class="row">
        <div class="container col-md-4">
            <div class="card">
                <div class="card-body">
                    {{ form(form, {'attr': { 'id': 'form'}}) }}
                </div>
            </div>
        </div>
        <div class="container col-md-8">
            {% for message in app.session.flashBag.get('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.session.flashBag.get('danger') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <a href="{{ path('facture_delete_all') }}" class="btn btn-primary">Nouveau Facture</a>
            <a href="{{ path('liste_chargement') }}" class="btn btn-primary">Mes factures</a>
            <a href="{{ path('facture_export') }}" class="btn btn-primary">Exporter en pdf</a>
            {% for message in app.session.flashBag.get('danger') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            <div class="card ">
                <div class="card-header">Facture</div>
                <div class="card-body">
                    <div class="table-responsive" >
                        <table id="facture_liste" class="table table-striped table-hover">
                            <tr>
                                <th>Quantite acheté</th>
                                <th>Produit</th>
                                <th>PrixUnit</th>
                                <th>Montant</th>
                                <th>Action</th>
                            </tr>
                            {% set total = 0 %}
                            {% for f in facture %}
                                <tr>
                                    <th>{{ f.quantite }}</th>
                                    <th>{% if f.produit.count() > 0 %}
                                            {{ f.produit[0].libelle }}
                                        {% endif %}
                                    </th>
                                    <th> {% if f.produit.count() > 0 %}
                                            {{ f.produit[0].prixUnit|number_format(0, ',', ' ') }}
                                        {% endif %}
                                    </th>
                                    <th>{{ f.montant | number_format(0, ',', ' ') }}</th>
                                    <th>
                                        <a title="supprimer" href="{{ path('facture_delete', {'id':f.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');"><i style="color: red" class="fa fa-trash" aria-hidden="true"></i></a>
                                    </th>
                                </tr>
                                {% set total = total + f.montant %}
                            {% endfor %}
                            <th>Total</th>
                            <th></th>
                            <th></th>
                            <th>{{ total|number_format(0, ',', ' ') }} f </th>
                            <th></th>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        var form = $('#form');
        form.on('submit', function(event) {
            event.preventDefault();
            $.ajax({
                type: form.attr('method'),
                url: form.attr('action'),
                data: form.serialize(),
                success: function(response) {
                    if (response.status === 'error') {
                        alert(response.message);
                    } else {
                        var updatedTable = $(response).find('#facture_liste');
                        $('#facture_liste').html(updatedTable.html());
                        form[0].reset();
                    }
                },
                error: function(xhr, status, error) {
                    alert('Une erreur est survenue : ' + error);
                }
            });
        });
    </script>
{% endblock %}